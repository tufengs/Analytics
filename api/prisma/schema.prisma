generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @db.Uuid
  email         String       @unique
  password      String
  role          Role         @default(WEBMASTER)
  company       String
  baseUrl       String
  validated     Boolean      @default(false)
  applicationId String?      @unique @db.Uuid
  phoneNumber   String?
  application   Application?
  KBIS          File?
  preferences   Preference?

  @@map("user")
}

model Application {
  id          String      @id @db.Uuid
  userId      String      @unique @db.Uuid
  user        User        @relation(fields: [userId], references: [id])
  credentials Credential?
  tag         Tag?
}

model Credential {
  id            String      @id @db.Uuid
  applicationId String      @unique @db.Uuid
  application   Application @relation(fields: [applicationId], references: [id])
}

model Preference {
  id         String @id @db.Uuid
  userId     String @unique @db.Uuid
  chartType  String
  dimensions String
  user       User   @relation(fields: [userId], references: [id])
}

model Tag {
  id            String       @id
  applicationId String?      @unique @db.Uuid
  comment       String
  application   Application? @relation(fields: [applicationId], references: [id])
}

model File {
  id           String  @id @db.Uuid
  userId       String? @unique @db.Uuid
  fieldname    String
  originalname String
  mimetype     String
  filename     String
  destination  String
  path         String
  encoding     String
  size         Int
  user         User?   @relation(fields: [userId], references: [id])
}

enum Role {
  WEBMASTER
  ADMIN
}
