generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id            String       @id @default(uuid()) @db.Uuid
  email         String       @unique
  password      String
  role          Role         @default(WEBMASTER)
  company       String
  baseUrl       String
  validated     Boolean      @default(false)
  applicationId String?      @unique @db.Uuid
  phoneNumber   String?
  application   Application?
  KBIS          File?
  preferences   Preference?
  dashboard     Dashboard[]

  @@map("user")
}

model Application {
  id          String       @id @default(uuid()) @db.Uuid
  userId      String       @unique @db.Uuid
  user        User         @relation(fields: [userId], references: [id])
  credentials Credential[]
}

model Credential {
  id            String      @id @default(uuid()) @db.Uuid
  applicationId String      @db.Uuid
  application   Application @relation(fields: [applicationId], references: [id])
  secret        String      @default(uuid()) @db.Uuid
  title         String
}

model Preference {
  id         String  @id @default(uuid()) @db.Uuid
  userId     String  @unique @db.Uuid
  user       User    @relation(fields: [userId], references: [id])
  chartType  String
  dimensions String
}

model File {
  id           String  @id @default(uuid()) @db.Uuid
  userId       String? @unique @db.Uuid
  user         User?   @relation(fields: [userId], references: [id])
  fieldname    String
  originalname String
  mimetype     String
  filename     String
  destination  String
  path         String
  encoding     String
  size         Int
}

model Dashboard {
  id            String       @id @default(uuid()) @db.Uuid
  userId        String       @db.Uuid
  user          User?        @relation(fields: [userId], references: [id])
  dashboard_elements DashboardElement[]
  title         String       @default("dashboard")
}

model DashboardElement {
  id String @id @default(uuid()) @db.Uuid
  dashboardId String @db.Uuid
  dashboard Dashboard @relation(fields: [dashboardId], references: [id])
  dashboardType DashboardType
  height        Int @default(200)
  width         Int @default(200)
  position Int
}

enum DashboardType {
  HEATMAP
  KPI
  GRAPH
}

enum Role {
  WEBMASTER
  ADMIN
}
